{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "src/",
    "outDir": "./lib"
  },
  "include": ["src", "src/**/*.json"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
